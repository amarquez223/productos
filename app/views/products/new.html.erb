<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Nuevo Producto</h1>
      <%= form_for @product do |p| %>
        <div class="form-group">
          <%= p.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del producto" %>
        </div>
        <div class="form-group">
          <%= p.number_field :price, class: "form-control input-lg", placeholder: "Ingresa el precio del producto" %>
        </div>
        <div>
          <% @categories.each do |cat| %>
            <%= check_box_tag("catpro[" + cat.id.to_s + "]") %>
            <%= label_tag("catpro[" + cat.id.to_s + "]",cat.name) %>
            <br>
          <% end %>
        </div>
        <div>
          <%= p.submit "Crear Producto", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>